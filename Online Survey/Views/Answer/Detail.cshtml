@model IEnumerable<Online_Survey.Models.AnswerLine>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    int number = 1;
}

<div class="card">
    <div class="card-body">
        <div class="card-title text-center">Anket Cevaplama Sayfası</div>
       
            @foreach (var item in Model)
            {
                <div class="card mb-3">
                    <div class="card-header p-3">@number)  @item.Question</div>
                    <div class="card-body p-3">
                        <div class="demo-radio-button">
                            <label class="mb-0" for="Yes_@item.Id">@item.Answer</label>
                        </div>
                    </div>
                </div>
                number++;
            }
    </div>
</div>
